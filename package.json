{
  "name": "permafrost",
  "version": "1.0.0",
  "description": "Salesforce Permission Model Analysis & Migration Tool",
  "type": "module",
  "main": "src/index.js",
  "bin": {
    "sf-perm": "./src/index.js"
  },
  "scripts": {
    "start": "node src/index.js",
    "test": "npm run test:unit && npm run test:integration && npm run test:snapshot && npm run test:smoke",
    "test:unit": "node --experimental-test-module-mocks --test test/unit/**/*.test.js",
    "test:integration": "node --test test/integration/*.test.js",
    "test:snapshot": "node --test --experimental-test-snapshots test/snapshot/*.test.js",
    "test:smoke": "node --test test/smoke/*.test.js",
    "dev": "node --watch src/index.js",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "prepare": "husky"
  },
  "keywords": [
    "salesforce",
    "permissions",
    "security",
    "analysis",
    "migration"
  ],
  "author": "Andrew Johnson",
  "license": "MIT",
  "dependencies": {
    "@salesforce/core": "^8.25.1",
    "@salesforce/source-deploy-retrieve": "^12.31.10",
    "better-sqlite3": "^11.7.0",
    "chalk": "^5.3.0",
    "commander": "^12.1.0",
    "fast-xml-parser": "^4.5.0",
    "ora": "^8.1.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.4.1",
    "@commitlint/config-conventional": "^20.4.1",
    "@eslint/js": "^9.39.2",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@stylistic/eslint-plugin": "^5.7.1",
    "eslint": "^9.17.0",
    "globals": "^17.3.0",
    "husky": "^9.1.7",
    "semantic-release": "^24.2.9"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
